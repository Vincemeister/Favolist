

<%= render "shared/product", product: @product, locals: { button_class: 'btn btn-list-category', link_url: list_path(@product.list), link_label: @product.list.title } %>

<div class="tab-bar d-flex justify-content-start px-3 py-1">

  <%= cl_image_tag @product.list.user.avatar.key, class: "avatar pr-2" %>
  <ul class="nav nav-pills mb-2" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active product-content" id="pills-review-tab" data-bs-toggle="pill" data-bs-target="#pills-review" type="button" role="tab" aria-controls="pills-review" aria-selected="true">Review</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link product-content" id="pills-description-tab" data-bs-toggle="pill" data-bs-target="#pills-description" type="button" role="tab" aria-controls="pills-description" aria-selected="false">Description</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link product-content" id="pills-referrals-tab" data-bs-toggle="pill" data-bs-target="#pills-referrals" type="button" role="tab" aria-controls="pills-referrals" aria-selected="false">Referrals</button>
    </li>
  </ul>
</div>


<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-review" role="tabpanel" aria-labelledby="pills-review-tab">
    <p>
      <%= @product.review %>
    </p>
  </div>
  <div class="tab-pane fade" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
    <p>
      <%= @product.description %>
    </p>
  </div>
  <div class="tab-pane fade" id="pills-referrals" role="tabpanel" aria-labelledby="pills-referrals-tab">
    <%= @product.referrals %>
  </div>
</div>
