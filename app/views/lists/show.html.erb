
<div class="d-flex justify-content-start align-items-center flex-row px-3 mb-2 py-1 bg-white w-100">
  <%= link_to user_path(@list.user) do %>
    <i class="fas fa-arrow-left fa-light text-decoration-none" style="color: #444444;"></i>
  <% end %>
  <div class="mx-auto text-center">
    <div class="profile-box d-flex align-items-center">
      <div>
        <%= cl_image_tag @list.user.avatar.key, crop: "fill", gravity: "center", class: "avatar user-img" %>
      </div>
      <div class="d-flex flex-column justify-content-center align-items-start">
        <h5 class="m-0 p-0"><%= @list.title %></h5>
        <p class="m-0 p-0"><%= @list.products.count %> products</p>
      </div>
    </div>
  </div>
</div>

<%= render "shared/products", products: @list.products %>
