<%= form_with(model: [@product, comment], url: product_comments_path(@product), remote: true, local: false, data: { comment_and_replies_target: "replyform", action: "submit->comment-and-replies#submitReply" }, method: :post, class: "container d-flex justify-content-between align-items-center px-0 w-100 d-none") do |form| %>
<%= cl_image_tag current_user.avatar.key, crop: "fill", gravity: "center", aspect_ratio: "1:1", class: "avatar-xs me-2"%>
  <div class="d-flex position-relative form-control comment-input w-100">
    <%= form.text_area :body, rows: 1, placeholder: 'Leave a reply...', class: "comment-textarea" %>
    <%= button_tag type: "submit", class: "comment-submit" do %>
      Post
    <% end %>
  </div>
  <%= form.hidden_field :parent_comment_id, value: parent_comment_id %>
<% end %>
