<%= form_with(model: [@product, comment], url: product_comments_path(@product), local: true, data: { target: "comments.form" }, method: :post, class: "comments-form", data: { action: "comments#submitForm" }) do |form| %>
  <div class="field">
    <%= form.label :body, 'Leave a comment:' %>
    <%= form.text_area :body, rows: 3 %>
    <%= form.hidden_field :parent_comment_id, value: parent_comment_id %>

  </div>
  <%= form.submit "Submit", class: "btn btn-primary" %>
<% end %>
